<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.HelloController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="messageLabel"
           style="-fx-font-size: 20px;"
           text="JavaFX Chat App ðŸ’¬" />

    <HBox alignment="CENTER_LEFT"
          spacing="10">
        <Label text="Topic:" />
        <TextField fx:id="topicField"
                   promptText="Enter topic name"
                   HBox.hgrow="ALWAYS" />
        <Button text="Connect"
                onAction="#connectToTopic" />
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="inputField"
                   promptText="Type a message"
                   HBox.hgrow="ALWAYS" />
        <Button text="Send"
                onAction="#sendMessage" />
    </HBox>

    <ListView fx:id="messageView"
              VBox.vgrow="ALWAYS" />

</VBox>
